{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Lit Review App",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/lit_review/Lit_Review_Code.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "FLASK_ENV": "development",
        "FLASK_RUN_HOST": "127.0.0.1",
        "FLASK_RUN_PORT": "5000",
        "PYTHONUNBUFFERED": "1"
      },
      "justMyCode": true,
      "preLaunchTask": "Setup .venv and required packages"
    }
  ]
}

